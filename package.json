{
  "name": "@imtp/root",
  "version": "1.0.0",
  "private": true,
  "description": "IMTP monorepo for npm packages",
  "keywords": [
    "monorepo",
    "npm",
    "packages"
  ],
  "author": "IMTP",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.6.2",
  "scripts": {
    "dev": "pnpm -r run dev",
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "lint": "node scripts/dev-tools.js lint",
    "format": "prettier --write .",
    "clean": "pnpm -r run clean",
    "publish": "pnpm -r publish --access public",
    "release": "pnpm build && changeset publish",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "interactive": "node scripts/interactive.js"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-operations": "^4.6.1",
    "@types/node": "^24.2.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@unocss/preset-attributify": "^66.4.1",
    "@unocss/preset-icons": "^66.4.1",
    "@unocss/preset-uno": "^66.4.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "depcheck": "^1.4.7",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.4.0",
    "graphql-codegen": "^0.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "openapi-typescript": "^7.8.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "swagger-typescript-api": "^13.2.7",
    "terser": "^5.43.1",
    "typedoc": "^0.28.9",
    "typedoc-plugin-markdown": "^4.8.0",
    "typescript": "^5.9.2",
    "unocss": "^66.4.1",
    "vite": "^7.1.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@imtp/core": "workspace:*",
    "@imtp/data": "workspace:*",
    "@imtp/types": "workspace:*",
    "@imtp/ui": "workspace:*",
    "dotenv": "^17.2.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "typescript": "^5.9.2",
      "vite": "^7.1.0"
    }
  }
}
