{
  "name": "@imtp/root",
  "version": "1.0.0",
  "private": true,
  "description": "IMTP monorepo for npm packages",
  "keywords": [
    "monorepo",
    "npm",
    "packages"
  ],
  "author": "IMTP",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.6.2",
  "scripts": {
    "dev": "pnpm -r run dev",
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "test:coverage": "pnpm -r run test:coverage",
    "test:ui": "pnpm -r run test:ui",
    "test:watch": "pnpm -r run test:watch",
    "lint": "node scripts/dev-tools.js lint",
    "format": "prettier --write .",
    "clean": "pnpm -r run clean",
    "clean:all": "pnpm clean && rimraf packages/*/dist packages/*/coverage",
    "type-check": "pnpm -r run type-check",
    "publish": "pnpm -r publish --access public",
    "release": "semantic-release",
    "release:dry-run": "semantic-release --dry-run",
    "release:analyze": "semantic-release --dry-run --debug",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "interactive": "node scripts/interactive.js",
    "monitor": "node scripts/monitor.js",
    "monitor:build": "node scripts/monitor.js build",
    "monitor:test": "node scripts/monitor.js test",
    "monitor:security": "node scripts/monitor.js security",
    "monitor:all": "node scripts/monitor.js all",
    "deps": "node scripts/dependency-manager.js",
    "deps:updates": "node scripts/dependency-manager.js updates",
    "deps:conflicts": "node scripts/dependency-manager.js conflicts",
    "deps:security": "node scripts/dependency-manager.js security",
    "deps:cleanup": "node scripts/dependency-manager.js cleanup",
    "env:check": "node scripts/dev-tools.js env:check",
    "env:validate": "node scripts/dev-tools.js env:validate",
    "env:create": "node scripts/env-manager.js create",
    "env:list": "node scripts/env-manager.js list",
    "create-package": "node scripts/create-package.js",
    "build:min": "node scripts/build-min.js",
    "build:clean": "pnpm clean:all && pnpm build",
    "generate:all": "node scripts/generate-types.js && node scripts/generate-api.js",
    "generate:types": "node scripts/generate-types.js",
    "generate:api": "node scripts/generate-api.js",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:deploy": "node scripts/deploy-docs.js"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-operations": "^4.6.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.4",
    "@semantic-release/npm": "^12.0.2",
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@unocss/preset-attributify": "^66.4.2",
    "@unocss/preset-icons": "^66.4.2",
    "@unocss/preset-uno": "^66.4.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "depcheck": "^1.4.7",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.4.0",
    "graphql-codegen": "^0.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "openapi-typescript": "^7.8.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "swagger-typescript-api": "^13.2.8",
    "terser": "^5.43.1",
    "typedoc": "^0.28.9",
    "typedoc-plugin-markdown": "^4.8.0",
    "typescript": "^5.9.2",
    "unocss": "^66.4.2",
    "vite": "^7.1.1",
    "vitepress": "^1.6.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@imtp/core": "workspace:*",
    "@imtp/data": "workspace:*",
    "@imtp/types": "workspace:*",
    "@imtp/ui": "workspace:*",
    "dotenv": "^17.2.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "typescript": "^5.9.2",
      "vite": "^7.1.0",
      "vue": "^3.4.0",
      "@vueuse/core": "^10.7.0",
      "@vueuse/shared": "^10.7.0",
      "@vueuse/integrations": "^10.7.0"
    }
  }
}
