{
  "name": "@imtp/root",
  "version": "1.0.0",
  "private": true,
  "description": "IMTP monorepo for npm packages",
  "keywords": [
    "monorepo",
    "npm",
    "packages"
  ],
  "author": "IMTP",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.6.2",
  "scripts": {
    "dev": "pnpm -r run dev",
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "test:ui": "pnpm -r run test:ui",
    "test:coverage": "pnpm -r run test:coverage",
    "lint": "pnpm -r run lint",
    "lint:fix": "pnpm -r run lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write . && pnpm lint:fix",
    "clean": "pnpm -r run clean",
    "publish": "pnpm -r run publish",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish",
    "create-package": "node scripts/create-package.js",
    "prepare": "husky",
    "pre-commit": "lint-staged"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@types/node": "^24.2.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@unocss/preset-uno": "^66.4.1",
    "@unocss/preset-attributify": "^66.4.1",
    "@unocss/preset-icons": "^66.4.1",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "prettier": "^3.6.2",
    "terser": "^5.43.1",
    "typescript": "^5.9.2",
    "unocss": "^66.4.1",
    "vite": "^7.1.0",
    "vitest": "^3.2.4"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
