{
  "name": "@imtp/root",
  "version": "1.0.0",
  "private": true,
  "description": "IMTP monorepo for npm packages",
  "keywords": [
    "monorepo",
    "npm",
    "packages"
  ],
  "author": "IMTP",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.6.2",
  "scripts": {
    "dev": "pnpm -r run dev",
    "build": "pnpm -r run build",
    "build:min": "pnpm -r run build && pnpm -r run build:min",
    "build:clean": "pnpm clean && pnpm build",
    "test": "pnpm -r run test",
    "test:ui": "pnpm -r run test:ui",
    "test:coverage": "pnpm -r run test:coverage",
    "test:watch": "pnpm -r run test --watch",
    "lint": "node scripts/dev-tools.js lint",
    "lint:fix": "pnpm -r run lint:fix",
    "lint:check": "pnpm -r run lint --max-warnings 0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write . && pnpm lint:fix",
    "clean": "pnpm -r run clean",
    "clean:all": "pnpm clean && pnpm -r run clean",
    "publish": "pnpm -r publish --access public",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish",
    "create-package": "node scripts/create-package.js",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "type-check": "node scripts/dev-tools.js type-check",
    "type-check:watch": "tsc --noEmit --watch",
    "analyze": "node scripts/dev-tools.js analyze",
    "docs": "typedoc",
    "generate:types": "node scripts/generate-types.js generate",
    "generate:api": "node scripts/generate-api.js",
    "generate:graphql": "graphql-codegen",
    "generate:all": "pnpm generate:types && pnpm generate:api && pnpm generate:graphql && pnpm docs",
    "env:validate": "node scripts/dev-tools.js env:validate",
    "env:check": "node scripts/dev-tools.js env:check",
    "env:create": "node scripts/dev-tools.js env:create",
    "env:local": "node scripts/dev-tools.js env:local",
    "env:list": "node scripts/dev-tools.js env:list",
    "dev-tools": "node scripts/dev-tools.js",
    "backup:create": "node scripts/rollback.js create",
    "backup:list": "node scripts/rollback.js list",
    "backup:rollback": "node scripts/rollback.js rollback",
    "backup:cleanup": "node scripts/rollback.js cleanup",
    "security:audit": "pnpm audit --audit-level moderate",
    "security:scan": "snyk test",
    "performance:build": "time pnpm build",
    "performance:analyze": "webpack-bundle-analyzer packages/*/dist/stats.json",
    "monitor:build": "node scripts/monitor.js build",
    "monitor:test": "node scripts/monitor.js test",
    "monitor:security": "node scripts/monitor.js security",
    "monitor:all": "node scripts/monitor.js all",
    "monitor:report": "node scripts/monitor.js report"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-operations": "^4.6.1",
    "@types/node": "^24.2.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@unocss/preset-attributify": "^66.4.1",
    "@unocss/preset-icons": "^66.4.1",
    "@unocss/preset-uno": "^66.4.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.4.0",
    "graphql-codegen": "^0.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "openapi-typescript": "^7.8.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "swagger-typescript-api": "^13.2.7",
    "terser": "^5.43.1",
    "typedoc": "^0.28.9",
    "typedoc-plugin-markdown": "^4.8.0",
    "typescript": "^5.9.2",
    "unocss": "^66.4.1",
    "vite": "^7.1.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@imtp/core": "workspace:*",
    "@imtp/data": "workspace:*",
    "@imtp/types": "workspace:*",
    "@imtp/ui": "workspace:*",
    "dotenv": "^17.2.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "typescript": "^5.9.2",
      "vite": "^7.1.0"
    }
  }
}
