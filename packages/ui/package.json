{
  "name": "@imtp/ui",
  "version": "1.0.0",
  "description": "IMTP Vue3 UI components package",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "build:esm": "vite build --mode esm",
    "build:cjs": "vite build --mode cjs",
    "build:umd": "vite build --mode umd",
    "build:min": "node ../../scripts/build-min.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx,.vue --no-warn-ignored",
    "lint:fix": "eslint src --ext .ts,.tsx,.vue --fix",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ui",
    "components",
    "vue3",
    "composition-api"
  ],
  "author": "IMTP",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/test-utils": "^2.4.0",
    "jsdom": "^26.1.0",
    "vue": "^3.4.0"
  },
  "dependencies": {
    "@imtp/core": "workspace:*",
    "@imtp/types": "workspace:*"
  },
  "peerDependencies": {
    "vue": ">=3.0.0"
  }
}
