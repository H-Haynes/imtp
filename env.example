# IMTP 项目环境变量配置示例
# 复制此文件为 .env.development, .env.test, .env.production 并根据需要修改

# 基础配置
NODE_ENV=development
DEBUG=imtp:*

# API 配置
API_URL=http://localhost:3000/api
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/app.log

# 数据库配置
DATABASE_URL=postgresql://user:password@localhost:5432/imtp
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=5000

# 缓存配置
CACHE_TTL=3600
CACHE_PREFIX=imtp:
REDIS_URL=redis://localhost:6379

# 安全配置
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# 邮件配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# 文件上传配置
UPLOAD_MAX_SIZE=10mb
UPLOAD_PATH=uploads/
UPLOAD_ALLOWED_TYPES=image/*,application/pdf

# 测试配置
TEST_TIMEOUT=10000
COVERAGE_THRESHOLD=80
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/imtp_test

# 监控配置
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# 第三方服务配置
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id
STRIPE_SECRET_KEY=your-stripe-secret-key

# 开发工具配置
API_DOCS_URL=http://localhost:3000/api-docs
API_TYPES_OUTPUT=packages/types/src/api/generated/openapi.ts
GRAPHQL_ENDPOINT=http://localhost:3000/graphql
